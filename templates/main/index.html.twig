{% extends 'base.html.twig' %}

{% block body %}
	{% for message in app.flashes('message')%}
		<div class="alert alert-success">{{message}}</div>
	{% endfor %}

	<h1>Add a new book to the library:
	</h1>
	<a href="{{path('create-student') }}" class="btn btn-success" role="button">Add New</a>

	<table class="table">
		<thead>
			<tr>
				<th scope="col">#</th>
				<th scope="col">Name</th>
				<th scope="col">Email</th>
				<th scope="col">Contact</th>
				<th scope="col">Action</th>
			</tr>
		</thead>
		<tbody>
			{% for student in students %}
				<tr>
					<th scope="row">{{loop.index}}</th>
					<td>{{student.name}}</td>
					<td>{{student.email}}</td>
					<td>{{student.contact}}</td>
					<td>
						<a href="{{path('edit-student', {'id': student.id}) }}" class="btn btn-primary" role="button">Edit</a>
						<a href="{{path('delete-student', {'id': student.id}) }}" class="btn btn-danger" role="button">Delete</a>
					</td>
				</tr>
			{% endfor %}
		</tbody>
	</table>
{% endblock %}
